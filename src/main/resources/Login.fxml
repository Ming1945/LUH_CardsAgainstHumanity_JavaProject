<GridPane prefHeight="653.0" prefWidth="857.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uni_hannover.cah.mainGui.LoginController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="5.0" prefWidth="857.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
          <children>
            <HBox alignment="CENTER" layoutX="-1.0" layoutY="150.0" prefHeight="100.0" prefWidth="857.0" spacing="100.0">
               <children>
                      <Button fx:id="btnConnect" mnemonicParsing="false" onAction="#connectButton" prefHeight="54.0" prefWidth="205.0" text="Connect" />
                  <Label fx:id="errorLabel" prefHeight="31.0" prefWidth="225.0" text="ERROR! Please try again" textFill="#fc0000" visible="false" />
               </children>
            </HBox>
          </children>
      </AnchorPane>
      <HBox alignment="CENTER" prefHeight="91.0" prefWidth="857.0" GridPane.columnIndex="1">
         <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="263.0" text="CLIENT LOGIN" textFill="#fffdfd">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="39.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
                <Label text="Name :  ">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="24.0" />
               </font></Label>
                <TextField fx:id="textFieldName" prefHeight="26.0" prefWidth="239.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="170.0" prefWidth="857.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
                <Label text="IP Address :  ">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="23.0" />
               </font></Label>
                <TextField fx:id="textfieldIP" prefHeight="26.0" prefWidth="239.0" />
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@creditsBackground.css" />
      <URL value="@gameplayBackground.css" />
   </stylesheets>
</GridPane>
